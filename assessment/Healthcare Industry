    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .tab-content {
            display: none;
        }
        .tab-content.active {
            display: block;
        }
        .slot.unavailable {
            background-color: #fee2e2;
            color: #b91c1c;
            cursor: not-allowed;
        }
        .slot.available {
            background-color: #dcfce7;
            color: #166534;
            cursor: pointer;
        }
        .slot.selected {
            background-color: #2563eb;
            color: white;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <header class="mb-12 text-center">
            <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/e06028ad-e55a-4604-be72-5e2c56294b42.png" alt="Sunset Health Clinic logo" class="mx-auto mb-4" />
            <h1 class="text-3xl font-bold text-gray-800">Clinic Appointment System</h1>
            <p class="text-gray-600 mt-2">Easily book and manage your appointments</p>
        </header>

        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="flex border-b">
                <button onclick="showTab('book')" class="tab-btn flex-1 py-4 px-6 font-medium text-center bg-blue-50 text-blue-700">
                    Book Appointment
                </button>
                <button onclick="showTab('manage')" class="tab-btn flex-1 py-4 px-6 font-medium text-center text-gray-500 hover:text-gray-700">
                    View/Cancel Appointment
                </button>
            </div>

            <!-- Book Appointment Tab -->
            <div id="book" class="tab-content active p-6">
                <h2 class="text-xl font-semibold mb-6 text-gray-800">Book a New Appointment</h2>
                <form id="bookingForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                            <input type="text" id="name" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="age" class="block text-sm font-medium text-gray-700 mb-1">Age</label>
                            <input type="number" id="age" min="1" max="120" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="mobile" class="block text-sm font-medium text-gray-700 mb-1">Mobile Number</label>
                            <input type="tel" id="mobile" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" pattern="[0-9]{10}">
                        </div>
                        <div>
                            <label for="doctor" class="block text-sm font-medium text-gray-700 mb-1">Preferred Doctor</label>
                            <select id="doctor" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Select Doctor</option>
                                <option value="Dr. Smith">Dr. Smith (General Physician)</option>
                                <option value="Dr. Johnson">Dr. Johnson (Cardiologist)</option>
                                <option value="Dr. Williams">Dr. Williams (Pediatrician)</option>
                                <option value="Dr. Brown">Dr. Brown (Dermatologist)</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <p class="text-sm font-medium text-gray-700 mb-3">Available Time Slots</p>
                        <div id="timeSlots" class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                            <!-- Time slots will be populated by JavaScript -->
                        </div>
                        <p id="slotError" class="mt-2 text-sm text-red-600 hidden">Please select a time slot</p>
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out">
                            Confirm Booking
                        </button>
                    </div>
                </form>
                <div id="bookingSuccess" class="hidden mt-6 p-4 bg-green-50 rounded-md text-green-700 text-center">
                    <h3 class="font-medium">Appointment Booked Successfully!</h3>
                    <p id="confirmMsg" class="mt-1"></p>
                </div>
            </div>

            <!-- View/Cancel Appointment Tab -->
            <div id="manage" class="tab-content p-6">
                <h2 class="text-xl font-semibold mb-6 text-gray-800">View or Cancel Appointment</h2>
                <div class="space-y-6">
                    <div>
                        <label for="searchMobile" class="block text-sm font-medium text-gray-700 mb-1">Enter Your Mobile Number</label>
                        <div class="flex space-x-2">
                            <input type="tel" id="searchMobile" class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" pattern="[0-9]{10}">
                            <button onclick="findAppointment()" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition duration-150 ease-in-out">
                                Search
                            </button>
                        </div>
                    </div>
                    
                    <div id="appointmentDetails" class="hidden border-t pt-6">
                        <h3 class="font-medium text-lg mb-4">Your Appointment Details</h3>
                        <div class="bg-gray-50 p-4 rounded-md">
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <p class="text-sm text-gray-500">Patient Name</p>
                                    <p id="detailName" class="font-medium"></p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Mobile Number</p>
                                    <p id="detailMobile" class="font-medium"></p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Age</p>
                                    <p id="detailAge" class="font-medium"></p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Doctor</p>
                                    <p id="detailDoctor" class="font-medium"></p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Appointment Time</p>
                                    <p id="detailTime" class="font-medium"></p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button onclick="cancelAppointment()" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md transition duration-150 ease-in-out">
                                Cancel Appointment
                            </button>
                        </div>
                    </div>
                    
                    <div id="noAppointmentMsg" class="hidden text-center py-8">
                        <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/ba0ba485-45c9-44be-9d32-b5a1fea50cd4.png" alt="Appointment not found" class="mx-auto mb-4">
                        <p class="text-gray-500">No appointment found with this mobile number.</p>
                    </div>
                    
                    <div id="cancelSuccess" class="hidden mt-6 p-4 bg-green-50 rounded-md text-green-700 text-center">
                        <h3 class="font-medium">Appointment Cancelled Successfully!</h3>
                        <p>Your appointment has been cancelled.</p>
                    </div>
                </div>
            </div>
