    </div>

    <script>
        // Initialize appointments array in session storage if not exists
        if (!sessionStorage.getItem('appointments')) {
            sessionStorage.setItem('appointments', JSON.stringify([]));
        }

        const timeSlots = ['10am', '11am', '12pm', '2pm', '3pm'];
        const maxPerSlot = 3;

        // DOM Content Loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize time slots display
            renderTimeSlots();
            
            // Form submission handler
            document.getElementById('bookingForm').addEventListener('submit', function(e) {
                e.preventDefault();
                bookAppointment();
            });
        });

        function showTab(tabId) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabId).classList.add('active');
            
            // Update active tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('bg-blue-50', 'text-blue-700');
                btn.classList.add('text-gray-500', 'hover:text-gray-700');
            });
            
            // Set active button
            event.target.classList.remove('text-gray-500', 'hover:text-gray-700');
            event.target.classList.add('bg-blue-50', 'text-blue-700');
            
            // Reset booking form when switching back to it
            if (tabId === 'book') {
                document.getElementById('bookingSuccess').classList.add('hidden');
            }
        }

        function renderTimeSlots() {
            const doctorSelect = document.getElementById('doctor');
            const timeSlotsContainer = document.getElementById('timeSlots');
            
            doctorSelect.addEventListener('change', updateTimeSlots);
            updateTimeSlots();
            
            function updateTimeSlots() {
                const selectedDoctor = doctorSelect.value;
                const appointments = JSON.parse(sessionStorage.getItem('appointments'));
                
                timeSlotsContainer.innerHTML = '';
                
                if (!selectedDoctor) {
                    timeSlotsContainer.innerHTML = '<p class="text-gray-500 col-span-3">Please select a doctor first</p>';
                    return;
                }
                
                timeSlots.forEach(slot => {
                    const slotDiv = document.createElement('div');
                    slotDiv.className = 'slot text-center py-2 rounded-md font-medium';
                    
                    // Count appointments for this doctor and time slot
                    const slotCount = appointments.filter(a => 
                        a.doctor === selectedDoctor && a.time === slot
                    ).length;
                    
                    if (slotCount >= maxPerSlot) {
                        slotDiv.classList.add('unavailable');
                        slotDiv.textContent = `${slot} (FULL)`;
                    } else {
                        slotDiv.classList.add('available');
                        slotDiv.textContent = slot;
                        slotDiv.onclick = function() {
                            selectTimeSlot(this, slot);
                        };
                    }
                    
                    timeSlotsContainer.appendChild(slotDiv);
                });
            }
        }

        let selectedSlot = null;
        
        function selectTimeSlot(element, slot) {
            // Deselect any previously selected slot
            const prevSelected = document.querySelector('.slot.selected');
            if (prevSelected) {
                prevSelected.classList.remove('selected');
            }
            
            // Select new slot
            element.classList.add('selected');
            selectedSlot = slot;
            document.getElementById('slotError').classList.add('hidden');
        }

        function bookAppointment() {
            // Validate form
            const name = document.getElementById('name').value.trim();
            const age = document.getElementById('age').value;
            const mobile = document.getElementById('mobile').value.trim();
            const doctor = document.getElementById('doctor').value;
            
            if (!name || !age || !mobile || !doctor) {
                alert('Please fill in all required fields');
                return;
            }
            
            if (!selectedSlot) {
                document.getElementById('slotError').classList.remove('hidden');
                return;
            }
            
            // Create appointment object
            const appointment = {
                id: Date.now(),
                name,
                age,
                mobile,
                doctor,
                time: selectedSlot
            };
            
            // Add to session storage
            const appointments = JSON.parse(sessionStorage.getItem('appointments'));
            appointments.push(appointment);
            sessionStorage.setItem('appointments', JSON.stringify(appointments));
            
            // Show success message
            document.getElementById('bookingForm').reset();
            document.getElementById('bookingSuccess').classList.remove('hidden');
            document.getElementById('confirmMsg').textContent = 
                `${name}, your appointment with ${doctor} at ${selectedSlot} has been confirmed.`;
            
            // Reset time slot selection
            selectedSlot = null;
            renderTimeSlots();
        }

        function findAppointment() {
            const mobile = document.getElementById('searchMobile').value.trim();
            const appointments = JSON.parse(sessionStorage.getItem('appointments'));
            const appointment = appointments.find(a => a.mobile === mobile);
            
            // Hide all messages first
            document.getElementById('appointmentDetails').classList.add('hidden');
            document.getElementById('noAppointmentMsg').classList.add('hidden');
            document.getElementById('cancelSuccess').classList.add('hidden');
            
            if (appointment) {
                // Show appointment details
                document.getElementById('detailName').textContent = appointment.name;
                document.getElementById('detailMobile').textContent = appointment.mobile;
                document.getElementById('detailAge').textContent = appointment.age;
                document.getElementById('detailDoctor').textContent = appointment.doctor;
                document.getElementById('detailTime').textContent = appointment.time;
                
                document.getElementById('appointmentDetails').classList.remove('hidden');
            } else {
                // Show not found message
                document.getElementById('noAppointmentMsg').classList.remove('hidden');
            }
        }

        function cancelAppointment() {
            const mobile = document.getElementById('searchMobile').value.trim();
            let appointments = JSON.parse(sessionStorage.getItem('appointments'));
            
            // Filter out the appointment to cancel
            appointments = appointments.filter(a => a.mobile !== mobile);
            sessionStorage.setItem('appointments', JSON.stringify(appointments));
            
            // Hide details and show success message
            document.getElementById('appointmentDetails').classList.add('hidden');
            document.getElementById('cancelSuccess').classList.remove('hidden');
            
            // Reset the form
            document.getElementById('searchMobile').value = '';
            
            // Update time slots on booking tab if that doctor had full slots
            renderTimeSlots();
        }
    </script>
</body>
</html>

